{
  "name": "po-dotnet",
  "displayName": "po-dotnet",
  "description": "show .po translaion when hover on localize method in .NET project",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:csharp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "My PO Hover Settings",
      "properties": {
        "poHover.poFileGlob": {
          "type": "string",
          "default": "Assets/SomekaVrcUnityExtension/Mofufuku/Editor/Localization/*.po",
          "description": "POファイルのパス（Glob形式）"
        },
        "poHover.functionName": {
          "type": "string",
          "default": "G",
          "description": "対象とする関数名"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}