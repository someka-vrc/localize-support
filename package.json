{
  "name": "po-support",
  "displayName": "po-support",
  "description": "show .po translation when hover on localize method in .NET project",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/someka-vrc/po-support.git"
  },
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "po-support.createConfig",
        "title": "Create podotnetconfig.json",
        "category": "PO Support"
      },
      {
        "command": "po-support.openPoEntry",
        "title": "Open PO entry",
        "category": "PO Support"
      },
      {
        "command": "po-support.reloadData",
        "title": "Reload PO data (clear cache)",
        "category": "PO Support"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "**/podotnetconfig.json",
        "url": "./schemas/podotnetconfig-schema.json"
      },
      {
        "fileMatch": "**/podotnetconfig~.json",
        "url": "./schemas/podotnetconfig-schema.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "PO Support Settings",
      "properties": {
        "poDotnet.config": {
          "description": "Array of configuration objects similar to podotnetconfig.json (folder-scoped settings supported). Each item configures sourceDirs, poDirs and localizeFuncs.",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "sourceDirs": { "type": "array", "items": { "type": "string" } },
              "poDirs": { "type": "array", "items": { "type": "string" } },
              "localizeFuncs": { "type": "array", "items": { "type": "string" } },
              "languages": { "type": "array", "items": { "type": "string" } }
            },
            "required": ["sourceDirs", "poDirs", "localizeFuncs"],
            "additionalProperties": false
          }
        },
        "poDotnet.wasmCdnBaseURL": {
          "description": "Base CDN URL to fetch tree-sitter wasm binaries if not available locally",
          "type": "string",
          "default": "https://unpkg.com/tree-sitter-wasms@latest/out/"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test:unit": "mocha --ui tdd \"out/test/unit/*.js\" --reporter spec",
    "test:integration": "vscode-test",
    "test": "npm run test:unit && npm run test:integration"
  },
  "dependencies": {
    "web-tree-sitter": "^0.20.0"
  },
  "devDependencies": {
    "proxyquire": "^2.1.3",
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "mocha": "^10.2.0"
  }
}